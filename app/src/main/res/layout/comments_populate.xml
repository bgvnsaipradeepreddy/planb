<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlPopulateComments"
        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPopulateComments"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_person"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamePopulateComments"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/ivPopulateComments"
        android:layout_toRightOf="@+id/ivPopulateComments"
        android:textSize="15dp"
        android:text="Anonymous"
        />

    <com.user.planb.ExpandableTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="2dp"
        android:id="@+id/etvDescriptionPopulateComments"
        android:layout_below="@+id/ivPopulateComments"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    </RelativeLayout>
</LinearLayout>
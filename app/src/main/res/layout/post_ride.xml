<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <include android:id="@+id/tbIncludeRidePost"
        layout="@layout/toolbar_button"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Starting place(*)"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivStartRidePost"/>
                    <EditText
                        android:id="@+id/etStartRidePost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/ivStartRidePost"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_marginLeft="10dp"
                        android:focusable="false"
                        android:inputType="textEmailAddress"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Starting Address"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place"
                android:layout_centerVertical="true"
                android:id="@+id/ivStartAddressRidePost"/>
                <EditText
                    android:id="@+id/etStartAddressRidePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivStartAddressRidePost"
                    android:backgroundTint="@android:color/transparent"
                    android:editable="false"
                    android:singleLine="true"
                    android:focusable="false"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Destination Place(*)"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivDesRidePost"/>
                <EditText
                    android:id="@+id/etDesRidePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivDesRidePost"
                    android:backgroundTint="@android:color/transparent"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Destination Address"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivDesAddressRidePost"/>
                <EditText
                    android:id="@+id/etDesAddressRidePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivDesAddressRidePost"
                    android:backgroundTint="@android:color/transparent"
                    android:editable="false"
                    android:singleLine="true"
                    android:focusable="false"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Journey date"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_range"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivDateRidePost"/>
                <EditText
                    android:id="@+id/etDateRidePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivDateRidePost"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="9/99/9999"
                    android:focusable="false"
                    android:editable="false"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Journey time"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_selector"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time"
                    android:layout_centerVertical="true"
                    android:id="@+id/ivTimeRidePost"/>
                <EditText
                    android:id="@+id/etTimeRidePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivTimeRidePost"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="05:55"
                    android:focusable="false"
                    android:editable="false"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Select vehicle"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_directions_car_black_24dp"
                    android:id="@+id/rbCarRidePost" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_motorcycle_black_24dp"
                    android:id="@+id/rbMotorcycleRidePost"
                    android:layout_marginLeft="20dp"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:text="Seats Available"/>
            <Spinner
                android:id="@+id/spinnerRidePost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/btn_dropdown"
                android:enabled="false"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:text="Cost per Seat"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etCostRidePost"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/black"/>
        </LinearLayout>
    </ScrollView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:id="@+id/pbRidePost"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/lib/com.hakunamatata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:id="@+id/tbMainPage"
        layout="@layout/toolbar"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpMainPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/textColorPrimry"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/textColorDark"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tlMainPage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorColor="@color/textColorPrimry"
        app:tabIndicatorHeight="1dp"
        android:background="@color/textColorPrimry"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/rlAddUserLivedPlaces"
    >
<include android:id="@+id/tbAddUserLivedPlaces"
    layout="@layout/toolbar_button"/>
<ListView android:id="@+id/lvAddUserLivedPlaces"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@android:color/black"
    android:dividerHeight="0.5dp"
    android:layout_below="@+id/tbAddUserLivedPlaces" />
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:visibility="gone"
    android:id="@+id/pbAddUserLivedPlaces"/>
</RelativeLayout>
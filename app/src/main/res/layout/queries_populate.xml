    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlAnswersPopulateQueries"
        android:id="@+id/addCommentPopulateQueries"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Add a comment .."
            android:id="@+id/tvAddCommentPopulateQueries"
            android:visibility="gone"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/llEmergencyPopulateQueries"
        android:layout_below="@+id/addCommentPopulateQueries"
        android:background="@drawable/custom_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14dp"
            android:textColor="#57cca5"
            android:textStyle="bold"
            android:text="Do you want to make this query as emergency?"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Yes"
                android:id="@+id/bYesEmergencyPopulateQueries"
                android:textColor="#696969"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_border"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/clLoginPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/tbLoginPage"
            layout="@layout/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbLoginPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tbLoginPage">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/loginpage_externalloginheight"
                    android:layout_marginLeft="@dimen/marginleftdefault"
                    android:layout_marginTop="@dimen/margintopdefault"
                    android:layout_marginRight="@dimen/marginrightdefault"
                    android:background="@color/colorfb"
                    android:id="@+id/llFbLoginPage">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Connect with Facebook"
                        android:textColor="@color/textColorPrimry"
                        android:textSize="@dimen/loginpage_textsize" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/loginpage_externalloginheight"
                    android:layout_margin="@dimen/margindefault"
                    android:id="@+id/llGoogleLoginPage"
                    android:layout_below="@+id/llFbLoginPage"
                    android:background="@color/colorgoogle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/loginpage_textsize"
                        android:layout_centerInParent="true"
                        android:textColor="@color/textColorPrimry"
                        android:text="Connect with Google" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/llGoogleLoginPage">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margintopdefault"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account?"
                            android:textSize="@dimen/textsizedefault"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Sign Up"
                            android:clickable="true"
                            android:id="@+id/tvSingupLoginPage"
                            android:textSize="@dimen/loginpage_textsize"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginleftdefault"
                            android:gravity="right"
                            android:text="Email"/>
                        <EditText
                            android:id="@+id/etEmailLoginPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/textsizedefault"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="@dimen/marginleftdefault"
                            android:inputType="textEmailAddress"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/margintopdefault"
                        android:background="@color/textColorDark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvValidEmailLogin"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/marginleftdefault"
                            android:gravity="right"
                            android:text="Password"/>
                        <EditText
                            android:id="@+id/etPasswordLoginPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textSize="@dimen/textsizedefault"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textColorDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvValidPasswordLogin" />
                    <TextView
                        android:id="@+id/tvForgotPasswordLoginPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="#167ffc"
                        android:textSize="12dp"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margintopdefault"
                        android:layout_marginLeft="@dimen/marginleftdefault"
                        android:layout_marginRight="@dimen/marginrightdefault"
                        android:text="By logging in, you agree to the Terms and Conditions and  Privacy Policy of Hakunamatata"
                        android:textSize="13dp"
                        android:id="@+id/tvTermsLoginPage"
                        android:textColor="@color/textColorDark"/>
                    <Button
                        android:id="@+id/bSubmitLoginPage"
                        android:layout_width="200dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:text="LOG IN"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/textColorPrimry" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/pbLoginPage"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:maxHeight="20dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
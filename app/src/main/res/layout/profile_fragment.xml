<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.hakunamatata"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/vFragmentProfile"
            android:background="@android:color/black"
            android:layout_below="@+id/tbIncludeFragmentProfile"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tlFragmentProfile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode ="fixed"
            app:tabIndicatorHeight="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/vFragmentProfile"
            android:background="#e5e5e5"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/vTabFragmentProfile"
            android:layout_below="@+id/tlFragmentProfile"
            android:background="@android:color/black"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/vpFragmentProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/vTabFragmentProfile" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/tbPoolResult"
        layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/rlStartPoolResult">
                <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStartTimePoolResult"
                    android:text="8:30"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    />
                    -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStartPlacePoolResult"
                    android:text="Kormangala"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4th block, Near Police station, Kormangala, Bangalore"
                    android:maxLines="1"
                    android:id="@+id/tvStartPlace1PoolResult"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:ellipsize="end"
                    android:layout_below="@+id/tvStartPlacePoolResult" />
            </RelativeLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@+id/rlStartPoolResult"
                android:id="@+id/ivPoolVehiclePoolResult"
                android:src="@drawable/ic_directions_car_black_24dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rlEndPoolResult"
                android:layout_below="@+id/ivPoolVehiclePoolResult">
                <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEndTimePoolResult"
                    android:text="12:30"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>
                    -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEndPlacePoolResult"
                    android:text="Pulivendla"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4th block, Near Police station, Kormangala, Bangalore"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tvEndPlace1PoolResult"
                    android:textColor="@android:color/black"
                    android:textSize="13dp"
                    android:layout_below="@+id/tvEndPlacePoolResult" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/vPoolResult"
                android:layout_below="@+id/rlEndPoolResult"
                android:background="@android:color/black"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rlCostPoolResult"
                android:layout_below="@+id/vPoolResult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCostPoolResult"
                    android:text="400/person"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSeatsAvailPoolResult"
                    android:text="2 Seats Available"
                    android:layout_weight="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <Spinner
                android:id="@+id/spinnerPoolResult"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/rlCostPoolResult"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
            <LinearLayout
                android:id="@+id/llTCPoolResult"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerPoolResult">

                <CheckBox
                    android:id="@+id/cbTCPoolResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tvTCPoolResult"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:text="ergrtgtrhhyjtjujuy hyj yjytjyu yjhtyjuj tyjyj yjytjtyjytj yju6ju6ju6j juu6" />

            </LinearLayout>
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Book"
                android:textColor="@android:color/white"
                android:layout_below="@+id/llTCPoolResult"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimary"
                android:id="@+id/bBookPoolResult"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/vFirstPoolResult"
                android:layout_below="@+id/bBookPoolResult"
                android:background="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/vFirstPoolResult"
                android:id="@+id/llDescPoolResult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Car Owner"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ivPoolResult"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNamePoolResult"
                        android:layout_marginTop="12dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="pradeep reddy"
                        android:layout_toEndOf="@+id/ivPoolResult"
                        android:layout_toRightOf="@+id/ivPoolResult"
                        android:textSize="15dp"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">
                    <View
                        android:layout_width="48dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/triangle_bubble" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bubble"
                        android:padding="10dp"
                        android:id="@+id/tvDescPoolResult"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Pradeep Reddy"
                    android:textSize="15dp"
                    android:textColor="#167ffc"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/llDescPoolResult"
                android:id="@+id/llCarDetPoolResult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Car Details"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Car"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Maruthi swift"
                    android:id="@+id/tvCarPoolResult"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Lagguage"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Max 2 bag(Medium)"
                    android:id="@+id/tvLugguagePoolResult"
                    android:textSize="15dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/llCarDetPoolResult"
                android:id="@+id/llCarVerPoolResult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="User Verification"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Phone Number"
                        android:textSize="15dp"
                        android:layout_toRightOf="@+id/ivPhNoPoolResult"
                        android:id="@+id/tvPhNoPoolResult"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Verified"
                        android:layout_toRightOf="@+id/ivPhNoPoolResult"
                        android:layout_below="@+id/tvPhNoPoolResult"
                        android:id="@+id/tvPhNoVerPoolResult"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_circle_custom"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/ivPhNoPoolResult"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Email"
                        android:textSize="15dp"
                        android:layout_toRightOf="@+id/ivEmailPoolResult"
                        android:id="@+id/tvEmailPoolResult"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/ivEmailPoolResult"
                        android:text="Verified"
                        android:layout_below="@+id/tvEmailPoolResult"
                        android:id="@+id/tvEmailVerPoolResult"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_circle_custom"
                        android:id="@+id/ivEmailPoolResult"
                        android:layout_marginLeft="20dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/llCarVerPoolResult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="User History"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Total Rides Offered"
                        android:textSize="15dp"
                        android:layout_toRightOf="@+id/ivRidesPoolResult"
                        android:id="@+id/tvRidesTitlePoolResult"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="10 rides"
                        android:layout_toRightOf="@+id/ivRidesPoolResult"
                        android:layout_below="@+id/tvRidesTitlePoolResult"
                        android:id="@+id/tvRidesPoolResult"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_directions_car_custom"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/ivRidesPoolResult"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="User Rating"
                        android:textSize="15dp"
                        android:layout_toRightOf="@+id/ivRatingPoolResult"
                        android:id="@+id/tvRatingTitlePoolResult"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="4.5/5(Total 30 reviews)"
                        android:layout_toRightOf="@+id/ivRatingPoolResult"
                        android:layout_below="@+id/tvRatingTitlePoolResult"
                        android:id="@+id/tvRatingPoolResult"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_grade_custom"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/ivRatingPoolResult"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View User Review"
                        android:textSize="15dp"
                        android:textColor="#167ffc"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/ivRatingPoolResult"
                        android:layout_below="@+id/tvRatingPoolResult"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
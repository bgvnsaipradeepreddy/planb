<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/clSignupPage">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlMainSignupPage">
        <include android:id="@+id/tbSignUpPage"
            layout="@layout/toolbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tbSignUpPage"
            android:isScrollContainer="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/marginleftdefault"
                    android:layout_marginTop="@dimen/margintopdefault"
                    android:layout_marginRight="@dimen/marginrightdefault"
                    android:background="@color/colorfb"
                    android:id="@+id/rlFbSignupPage">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/loginpage_textsize"
                        android:layout_centerInParent="true"
                        android:textColor="@color/textColorPrimry"
                        android:text="Connect with Facebook"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/margindefault"
                    android:orientation="horizontal"
                    android:id="@+id/rlGoogleSignupPage"
                    android:layout_below="@+id/rlFbSignupPage"
                    android:background="@color/colorgoogle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/loginpage_textsize"
                        android:textColor="@color/textColorPrimry"
                        android:text="Connect with Google" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlGoogleSignupPage">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account?"
                            android:textSize="@dimen/textsizedefault"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Login"
                            android:clickable="true"
                            android:id="@+id/tvLoginSignupPage"
                            android:textSize="@dimen/loginpage_textsize"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text=" User Name"/>
                        <EditText
                            android:id="@+id/etUserNameSignupPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textSize="@dimen/textsizedefault"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvValidUserNameSignupPage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="Email"/>

                        <EditText
                            android:id="@+id/etEmailSignupPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:singleLine="true"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="10dp"
                            android:inputType="textEmailAddress"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvVaildEmailSignupPage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="Password"/>
                        <EditText
                            android:id="@+id/etPasswordSignupPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/textsizedefault"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="10dp"
                            android:inputType="textPassword"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textColorDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvValidPasswordSignupPage" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="Mobile Number"/>
                        <EditText
                            android:id="@+id/etMobileNumberSignupPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/textsizedefault"
                            android:background="@android:color/transparent"
                            android:layout_marginLeft="10dp"
                            android:inputType="phone"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textColorDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvValidMobileNumberSignupPage" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/textsizedefault"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="By logging in, you agree to the Terms and Conditions and  Privacy Policy of Hakunamatata"
                        android:textSize="13dp"
                        android:id="@+id/tvTermsSignupPage"
                        android:textColor="@color/textColorDark"/>
                    <Button
                        android:id="@+id/bSubmitSignupPage"
                        android:layout_width="200dp"
                        android:layout_marginTop="@dimen/margintopdefault"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:text="SIGN UP"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/textColorPrimry"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/pbSignupPage"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:maxHeight="20dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>